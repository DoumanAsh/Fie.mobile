<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fie.Pages.HomePage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Share Post" HorizontalOptions="FillAndExpand" />
            <Editor Text="{Binding Text, Mode=TwoWay}" AutoSize="TextChanges" Keyboard="Chat" />
            <Button Text="Attach image" Command="{Binding open_file}" />
            <Button Text="Post" Command="{Binding post_tweet}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>